<div id="page_wrapper">
	<h2>Rejestracja</h2>
	<br>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="form-group">
        <div><%= f.label :Twój_avatar, class: 'col-sm-2 control-label'  %>
    	 <%= f.file_field :avatar %></div><br>
    
      <div><%= f.label :login , class: 'col-sm-2 control-label'%>
	  <%= f.text_field :login, autofocus: true %></div><br>
	

	  <div><%= f.label :email , class: 'col-sm-2 control-label'%>
	  <%= f.email_field :email, autofocus: true %></div><br>

	  <div><%= f.label :hasło , class: 'col-sm-2 control-label'%> 
	    <%= f.password_field :password, autocomplete: "off"%> (8 znaków minimum)</div><br>

	  <div><%= f.label :powtórz_hasło , class: 'col-sm-2 control-la(8 znaków minimum)bel'%>
	    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
	    <br>
	    
	  <div class=" control-l">
	  <%= f.submit "Zarejestruj"%><br>
	<% end %>
	<%= render "devise/shared/links" %></div>
</div>
